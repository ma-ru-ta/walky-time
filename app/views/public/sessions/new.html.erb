<div class="container kakomi-box4">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h3>ログイン <i class="fa-solid fa-right-to-bracket"></i></h3>

      <%= form_with model: @user, url: user_session_path do |f| %>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "ログイン", class:"btn font-bold rounded-pill", style: "background-color: #ffaa00; color: #ffffff;" %>
        </div>
        
      <% end %>
    </div>
  </div>

  <div class="form-row mb-2">
    <div class="col-6 mt-5 mx-auto text-center">
      <h4>新規会員登録のかた</h4>
      <div>
        <%= link_to " こちらから ", new_user_registration_path, class:"btn font-bold rounded-pill", style: "background-color: #b7d7b9; color: #ffffff;" %>
      </div>
    </div>
  
    <div class ="col-6 mt-5 mx-auto text-center">
      <h4>ゲストログイン</h4>
      <div>
        <%= link_to " ここをクリック ", users_guest_sign_in_path, method: :post, class:"btn font-bold rounded-pill", style: "background-color: #b7d7b9; color: #ffffff;" %>
      </div>
    </div>
  </div>
</div>

      

