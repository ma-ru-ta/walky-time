<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>会員登録画面</h2>

      <%= form_with model:@user, url: user_registration_path, method: :post do |f| %>

        <div class="form-group">
          <%= f.label :real_name, "名前" %>
          <%= f.text_field :real_name, autofocus: true, autocomplete: "real_name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :user_name, "ユーザー名" %>
          <%= f.text_field :user_name, autocomplete: "user_name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号" %>
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :telephone_number, "電話番号" %>
          <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "パスワード" %><small class="text-black-50">（６文字以上）</small>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "確認用パスワード" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-5 mx-auto">
              <%= f.submit " 新 規 登 録 ", class: "btn btn-primary rounded-pill" %>
            </div>
          </div>
        </div>
      <% end %>
    <div class="form-row">
      <div class="col-6 form-group mt-5">
        <h4>既に会員済みの方</h4>
      </div>
    </div>
      <div>
        <%= link_to " ここをクリック ", new_user_session_path, class: "btn btn-primary rounded-pill" %>
      </div>
    </div>
  </div>
</div>