<div class="container px-5 px-sm-0">
  <div class="row">
    <h4>投稿詳細画面</h4>
  </div>

  <div class = "row">
    <div class = "col-4 ml-lg-6 pt-5 mt-2">
      <% if @post.post_image.attached? %>
        <%= image_tag @post.post_image, class: "img-fluid" %>
      <% end %>
    </div>

    <div class = "col-8 form-group mt-5" >
      <div class = "row my-lg-1">
        <div class = col-3 , style="color: #48120E">
          愛犬の名前
        </div>
        <div class = "col-lg-9">
          <h5><%= @post.dog_name %></h5>
        </div>
      </div>

      <div class = "row my-lg-4">
        <div class = col-3>
          犬種
        </div>
      <div class = "col-9">
        <h5><%= @post.dog_type %></h5>
      </div>
      </div>

      <div class = "row my-lg-4">
        <div class = col-3>
          お散歩希望日
        </div>
        <div class = "col-9">
          <h5><%= @post.day %></h5>
        </div>
      </div>

      <div class = "row my-lg-4">
        <div class = col-3>
          都道府県
        </div>
      <div class = "col-9">
        <h5><%= @post.prefecture.name %></h5>
      </div>
      </div>

      <div class = "row my-lg-4">
        <div class = col-3>
          市町村
        </div>
      <div class = "col-9">
        <h5><%= @post.city %></h5>
      </div>
      </div>

      <div class = "row my-lg-4">
        <div class = col-3>
          紹介文・条件
        </div>
      <div class = "col-9">
        <h5><%= @post.post_body %></h5>
      </div>
      </div>

    </div>

      <div class = "row" >
        <% if @post.user == current_user %>
          <div><%= link_to "Edit", edit_post_path(@post), class:"btn btn-sm btn-success" %></div>
          <div><%= link_to "Destroy", post_path, method: :delete, class:"btn btn-sm btn-danger" %></div>
        <% end %>
      </div>
  </div>

  <div class= "row">
    <h3>コメント</h3>
    <% @post.comments.each do |comment| %>
      <%= comment.user.user_name %>
      <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.body %>
                                                    <!--commentテーブルにあるカラム-->
    <% end %>

    <%= form_with model: [@post, @post_comment] do |f| %>
      <%= f.text_area :body, placeholder: "コメントをここに★" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>

</div>








