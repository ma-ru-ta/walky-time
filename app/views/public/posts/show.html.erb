<div class="container">
  <h4>投稿詳細画面</h4>

  <div class = "row">
    <div class = "col-4">
      <div class="relative">
        <% if @post.post_image.attached? %>
          <%= image_tag @post.get_post_image(600, 600), class: "img-fluid post-card-img" %>
        <% end %>
        <% if @post.active_status == false %>
          <%= image_tag "business_icon_ca_124.png",size: "200x200", class: "absolute" %>
        <% end %>
      </div>
    </div>

    <div class = "col-md-8 mb-2" >
      <div class = "row">
        <div class = col-md-3 , style="color: #48120E">
          ユーザー名
        </div>
        <div class = "col-md-9">
          <%= link_to user_path(id: @post.user_id) do %>
           <%= @post.user.user_name %>
          <% end %>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          愛犬の名前
        </div>
        <div class = "col-md-9">
          <h5><%= @post.dog_name %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          犬種
        </div>
        <div class = "col-md-9">
          <h5><%= @post.dog_type %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          お散歩希望日
        </div>
        <div class = "col-md-9">
          <h5><%= @post.day %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = "col-md-3">
          都道府県
        </div>
        <div class = "col-md-9">
          <h5><%= @post.prefecture.name %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          市町村
          </div>
        <div class = "col-md-9">
          <h5><%= @post.city %></h5>
        </div>
      </div>

      <div class = "row">
        <div class = col-md-3>
          紹介文・条件
        </div>
        <div class = "col-md-9">
          <h5><%= simple_format(@post.post_body, class: "m-0") %></h5>
        </div>
      </div>

      <div>
        <% if @post.favorited_by?(current_user) %>
        <p>
          <%= link_to post_favorite_path(@post), method: :delete do %>
            ♥<%= @post.favorites.count %> いいね
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to post_favorite_path(@post), method: :post do %>
            ♡<%= @post.favorites.count %> いいね
          <% end %>
        </p>
          <% end %>
　　　　<div class="row">
　　　　<% if @post.user == current_user %>
　　　　  <div class="col-4">
            <%= link_to " 編 集 ", edit_post_path(@post), class:"btn btn-sm btn-success" %>
            <%= link_to " 削 除 ", post_path, method: :delete, class:"btn btn-sm btn-danger" %>
　　　　  </div>
　　　　  <div class="col-4">
　　　　  <% if @post.active_status == true %>
            <%= link_to " 依頼済にする ", switch_on_path(@post.id), method: :post, class:"btn btn-sm btn-danger" %>
          <% else%>
            <%= link_to " 募集中に戻す ", switch_off_path(@post.id), method: :post, class:"btn btn-sm btn-success" %>
          <% end %>
　　　　  </div>
        <% end %>
        </div>
      </div>

    </div>
  </div>
      <h3>コメント</h3>

      <div>
        <%= form_with model: [@post, @post_comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :body, placeholder: "コメントをここに★" ,  rows: 5, class: "form-control"%>
                <%= f.submit "送信する" %>
            <% end %>
          </div>
      </div>

      <% @post.comments.each do |comment| %>
        <%= comment.user.user_name %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.body %>
                                                     <!--commentテーブルにあるカラム-->
        <% if comment.user == current_user %>
          <%= link_to "削除", post_comment_path(@post, comment), method: :delete, method: :delete %>
        <% end %>
      <% end %>

</div>








