<div class="container">

  <div class = "row d-flex justify-content-center">
    <font size="8"><i class="fa-regular fa-star"></i><%= @user.user_name %>のページ<i class="fa-regular fa-star"></i></font>
  </div>

  <div class="row">
    <div class="col text-center p-4 h-100 w-100">
      <table class="table table-bordered", style="color:#48120E;">
        <tbody>
          <tr>
            <td>ユーザー名</td>
            <td><%= @user.user_name %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
      <% if @user == current_user && !current_user.guest? %>
        <span class=""><%= link_to " 編 集 す る ", edit_user_path, class:"btn font-bold rounded-pill", style: "background-color: #ffaa00; color: #ffffff;" %></span>
      <% end %>
  </div>
    <!--<font size="5">-->
    <h4 class="text-center mt-5">
      <i class="fa-regular fa-star"></i><%= @user.user_name %>の投稿一覧<i class="fa-regular fa-star"></i>
    </div>
    </h4>
    <!--</font>-->

  <div class="row">
    <div class="col text-center p-4 h-100 w-100">
      <%= render 'public/posts/index', posts: @posts %>
    </div>
  </div>

</div>

