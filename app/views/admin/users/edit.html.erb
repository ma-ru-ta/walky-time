<div class="container">
   <%= form_with model:@user, url: admin_user_path(@user.id), method: :patch do |f| %>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h4>ユーザー編集ページ</h4>

        <div class="form-group">
          <%= f.label :real_name, "名前" %>
          <%= f.text_field :real_name, autofocus: true, autocomplete: "real_name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :user_name, "ユーザー名" %>
          <%= f.text_field :user_name, autocomplete: "user_name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号" %>
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :telephone_number, "電話番号" %>
          <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_field :introduction, class: "form-control" %>
        </div>
        <!--<div class="form-group">-->
        <!--  <%= f.label :is_active, "会員ステータス" %>-->
        <!--</div>-->
        <!--  <%= f.radio_button :is_active, false %>-->
        <!--  <%= f.label :is_active, "退会" %>-->

        <!--  <%= f.radio_button :is_active, true %>-->
        <!--  <%= f.label :is_active, "有効" %>-->

        <div class="form-row justify-comtent-center">
          <%= f.submit " 編 集 を 保 存 ", class:"btn font-bold rounded-pill", style: "background-color: #ffaa00; color: #664e3d;" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
