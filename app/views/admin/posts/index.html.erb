<div class="container">
  <div class="row">

    <div class="col-10">
      <h4 class="text-center", style="color: #48120E">
        <i class="fa-solid fa-cookie-bite" style="color: #b37039;"></i>
          投稿一覧
        <i class="fa-solid fa-cookie-bite" style="color: #b37039;"></i>
       </h4>

      <div class = "mt-4 pt-3">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>投稿日時</th>
              <th>ユーザー名</th>
              <th>都道府県</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= link_to admin_post_path(post.id) do %>
                    <%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
                  <% end %>
                </td>
                <td>
                  <%= post.user.user_name %>
                </td>
                <td>
                  <%= post.prefecture.name %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    
        <div>
          <%= paginate @posts %>
        </div>
        
    </div>
  </div>
</div>
