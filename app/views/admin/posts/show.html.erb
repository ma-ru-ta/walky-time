<div class="container">
  <h4>投稿詳細画面</h4>

  <div class = "row">
    <div class = "col-4">
      <%= image_tag @post.get_post_image(600, 600), class: "img-fluid post-card-img" %>
    </div>

    <div class = "col-md-8 mb-2" >

      <div class = "row mb-2">
        <div class = col-md-3>
          <i class="fa-solid fa-user"></i>
          ユーザー名
        </div>
        <div class = "col-md-9">
          <%= link_to admin_user_path(id: @post.user_id) do %>
           <%= @post.user.user_name %>
          <% end %>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          <i class="fa-solid fa-dog"></i>
          愛犬の名前
        </div>
        <div class = "col-md-9">
          <h5><%= @post.dog_name %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          <i class="fa-solid fa-dog"></i>
           犬 種
        </div>
        <div class = "col-md-9">
          <h5><%= @post.dog_type %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          <i class="fa-solid fa-dog"></i>
           性別
        </div>
        <div class = "col-md-9">
          <h5>
            <% if @post.dog_sex == true %>
            ♂
            <% else %>
            ♀
            <% end %>
          </h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          <i class="fa-regular fa-calendar-days"></i>
          お散歩希望日
        </div>
        <div class = "col-md-9">
          <h5><%= @post.day %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = "col-md-3">
          <i class="fa-solid fa-map-pin"></i>
          都道府県
        </div>
        <div class = "col-md-9">
          <h5><%= @post.prefecture.name %></h5>
        </div>
      </div>

      <div class = "row mb-2">
        <div class = col-md-3>
          <i class="fa-solid fa-map-pin"></i>
          市町村
          </div>
        <div class = "col-md-9">
          <h5><%= @post.city %></h5>
        </div>
      </div>

      <div class = "row">
        <div class = col-md-3>
          <i class="fa-solid fa-dog"></i>
          紹介文・条件
        </div>
        <div class = "col-md-9">
          <h5><%= simple_format(@post.post_body, class: "m-0") %></h5>
        </div>
      </div>
　　</div>

      <div>
        <%= link_to " 投 稿 削 除 ", admin_post_path, method: :delete, class:"btn btn-sm btn-danger rounded-pill" %>
      </div>

   </div>

  <div class = "row">
    <% @post.comments.each do |comment| %>
        <%= comment.user.user_name %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.body %>
                                                       <!--commentテーブルにあるカラム-->


    <%= link_to "削除", admin_post_comment_path(comment.post_id, comment.id), method: :delete, class: "btn btn-sm btn-danger rounded-pill" %>
                                                          <!--コメント内の投稿idと(,)コメントidを取得する-->
    <% end %>
  </div>


</div>