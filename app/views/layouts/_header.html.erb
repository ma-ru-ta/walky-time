<div class="container">
  <div class="row">
    <div class="fixed-top p-2", style = "background-color: rgba(255, 255, 255, 0.8);">
      <div class="d-flex content-between align-items-center md-4 ">

        <div class="btn-group ml-auto">
          <ul class="nav justify-content-center">
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "投稿一覧", posts_path, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "お気に入り一覧", favorites_path, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "About", about_path, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "新規投稿", new_post_path, class: "btn font-bold ", style: " color: #48120E;" %></li>

              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :content %>
                <%= f.submit "検索" %>
              <% end %>

            <% elsif admin_signed_in? %>
              <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "ユーザー一覧", admin_users_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
              <li class="nav-item"><%= link_to "投稿一覧", admin_posts_path, class: "btn font-bold ", style: " color: #48120E;"%></li>
              <li class="nav-item"><%= link_to "コメント一覧", admin_comments_path, class: "btn font-bold ", style: " color: #48120E;"%></li>

              <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
                <%= f.text_field :content %>
                <%= f.submit "検索" %>
              <% end %>

            <% else %>
              <li class="nav-item"><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "投稿一覧", posts_path, class: "btn font-bold ", style: " color: #48120E;" %></li>
              <li class="nav-item"><%= link_to "About", about_path, class: "btn font-bold ", style: " color: #48120E;" %></li>

              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :content %>
                <%= f.submit "検索" %>
              <% end %>

            <% end %>
          </ul>
        </div>

      </div>
    </div></div>